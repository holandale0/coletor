<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:background="#F3F6F9">

    <HorizontalScrollView
        android:id="@+id/cabecalho_especies"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fadingEdge="horizontal|vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ebebe0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/col_codigo"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="20dp"
                android:padding="5dp"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:text="CÓDIGO"/>

            <TextView
                android:id="@+id/col_nome_pop"
                android:layout_marginTop="2dp"
                android:padding="5dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="center_horizontal"
                android:text="NOME POPULAR"/>

            <TextView
                android:id="@+id/col_nome_cie"
                android:layout_marginTop="2dp"
                android:padding="5dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="center_horizontal"
                android:text="NOME CIENTÍFICO"/>


        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>