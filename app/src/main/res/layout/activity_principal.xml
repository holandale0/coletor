<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="coletor.sismanejo.com.br.coletor.activities.PrincipalActivity"
    android:background="#dfffdc"
    android:orientation="vertical"
    android:id="@+id/principal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:background="?attr/colorAccent">
        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="?attr/colorAccent">
        </LinearLayout>

        <LinearLayout
        android:layout_width="1024dp"
        android:layout_height="680dp"
        android:orientation="vertical">


            <LinearLayout
                android:layout_width="999dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbConfiguracoesUt"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="400dp"
                    android:text="CONFIGURAÇÕES DA UT:"
                    android:textSize="22dp"
                    android:textColor="#000000" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="999dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/lbUt"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:text="UT:"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
                <EditText
                    android:id="@+id/campoUt"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/lbDataAtual"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="45dp"
                    android:text="Data atual:"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
                <DatePicker
                    android:id="@+id/campoDataAtual"
                    android:layout_width="wrap_content"
                    android:layout_height="210dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="999dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/lbAnotador"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:text="Anotador:"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
                <EditText
                    android:id="@+id/campoAnotador"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/lbBotanico"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:text="Botânico:"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="22dp" />

                <EditText
                    android:id="@+id/campoBotanico"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/lbPlaqueteiro"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:text="Plaqueteiro:"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
                <EditText
                    android:id="@+id/campoPlaqueteiro"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="999dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/lbLateralX"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:text="Lateral X:"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
                <EditText
                    android:id="@+id/campoLateralX"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/lbLateralY"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:text="Lateral Y:"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
                <EditText
                    android:id="@+id/campoLateralY"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/lbAnotadorGPS"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:text="Anotador GPS:"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
                <EditText
                    android:id="@+id/campoAnotadorGPS"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="1024dp"
                android:layout_height="2dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="1024dp"
                android:layout_height="95dp">

                <Button
                    android:id="@+id/btnAlterarDadosUt"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Alterar"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:background="@layout/template_botao_padrao"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btnSalvarDadosUt"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Salvar"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:background="@layout/template_botao_padrao"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btnCancelarAlteracoes"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Cancelar"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:background="@layout/template_botao_padrao"
                    android:textSize="18dp" />


                <Button
                    android:id="@+id/btnIniciarColeta"
                    android:layout_width="200dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="390dp"
                    android:layout_marginTop="10dp"
                    android:background="@layout/template_botao_padrao"
                    android:text="Iniciar Coleta"
                    android:textColor="#ffffff"
                    android:textSize="24dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="1024dp"
                android:layout_height="2dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal">

            </LinearLayout>



        <LinearLayout
            android:layout_width="1024dp"
            android:layout_height="80dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="11dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnProjeto"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Configurações do projeto"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@layout/template_botao_padrao"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btnEspecies"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="lista de especies"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@layout/template_botao_padrao"
                android:textSize="18dp" />


            <Button
                android:id="@+id/btnConsultarDados"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="consultar dados"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@layout/template_botao_padrao"
                android:textSize="18dp" />


        </LinearLayout>



    </LinearLayout>





        <LinearLayout
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:background="?attr/colorAccent">
        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"

        android:orientation="horizontal"
        android:background="?attr/colorAccent">
    </LinearLayout>

</LinearLayout>
