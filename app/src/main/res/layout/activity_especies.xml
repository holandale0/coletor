<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="coletor.sismanejo.com.br.coletor.activities.EspeciesActivity"
    android:background="#dfffdc"
    android:orientation="vertical"
    android:id="@+id/especies">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:background="?attr/colorAccent">
        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="?attr/colorAccent">
        </LinearLayout>

        <LinearLayout
        android:layout_width="1024dp"
        android:layout_height="680dp"
        android:orientation="vertical">


            <LinearLayout
                android:layout_width="999dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbListaEspecies"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="400dp"
                    android:text="LISTA DE ESPÉCIES:"
                    android:textSize="22dp"
                    android:textColor="#000000" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="999dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/lbCodEspecie"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:text="Código Numérico:"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
                <EditText
                    android:id="@+id/campoCodEspecie"
                    android:layout_width="60dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/lbNomePopular"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:text="Nome Popular:"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="22dp" />

                <EditText
                    android:id="@+id/campoNomePopular"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/lbNomeCientifico"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:text="Nome Científico:"
                    android:textSize="22dp"
                    android:textColor="#000000" />
                <EditText
                    android:id="@+id/campoNomeCientifico"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="1024dp"
                android:layout_height="2dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal">

            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/registros"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:fadingEdge="horizontal|vertical">
                <ListView
                    android:id="@+id/lista_especies"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.55" />
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="1024dp"
                android:layout_height="95dp">

                <Button
                    android:id="@+id/btnCancelarAlteracoes"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Cancelar alterações"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:background="@layout/template_botao_padrao"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btnSalvarAlteracoes"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Salvar alterações"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:background="@layout/template_botao_padrao"
                    android:textSize="18dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="1024dp"
                android:layout_height="95dp">

                <Button
                    android:id="@+id/btnPrincipal"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Retorna à tela principal"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:background="@layout/template_botao_padrao"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btnProjeto"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Configuração do projeto"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:background="@layout/template_botao_padrao"
                    android:textSize="18dp" />


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"

        android:orientation="horizontal"
        android:background="?attr/colorAccent">
    </LinearLayout>

</LinearLayout>
