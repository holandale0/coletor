<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="coletor.sismanejo.com.br.coletor.activities.ProjetoActivity"
    android:background="#dfffdc"
    android:orientation="vertical"
    android:id="@+id/projeto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:background="?attr/colorAccent">
        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="?attr/colorAccent">
        </LinearLayout>

        <LinearLayout
        android:layout_width="1024dp"
        android:layout_height="680dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="1024dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbConfiguracoesProjeto"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="300dp"
                android:text="CONFIGURAÇÕES DO PROJETO:"
                android:textSize="22dp"
                android:textColor="#000000" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="999dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/lbEmpreendimento"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:text="Empreendimento:"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="#000000" />
            <EditText
                android:id="@+id/campoEmpreendimento"
                android:layout_width="800dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:textSize="20dp" />

        </LinearLayout>


            <LinearLayout
                android:layout_width="961dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/lbUmf"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:text="UMF:"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
                <EditText
                    android:id="@+id/campoUmf"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/lbUpa"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:text="UPA:"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/campoUpa"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:maxLength="4"
                    android:inputType="number"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/lbDataInicial"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:text="Data de início:"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
                <DatePicker
                    android:id="@+id/campoDataInicial"
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="529dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbSistemaCoord"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Stm de coordenadas:"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="GPS"
                    android:id="@+id/radioGPS"
                    android:checked="true"
                    android:textSize="22dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="X Y"
                    android:id="@+id/radioXY"
                    android:checked="false"
                    android:textSize="22dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="529dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/lbTipoInventario"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:text="Tipo de inventário:"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Contínuo"
                    android:id="@+id/radioContinuo"
                    android:checked="true"
                    android:textSize="22dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Amostragem"
                    android:id="@+id/radioAmostragem"
                    android:checked="false"
                    android:textSize="22dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="999dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/lbAnotador"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:text="Anotador:"
                    android:textSize="22dp"
                    android:textColor="#000000" />
                <EditText
                    android:id="@+id/campoAnotador"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/lbBotanico"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:text="Botânico:"
                    android:textSize="22dp"
                    android:textColor="#000000" />
                <EditText
                    android:id="@+id/campoBotanico"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/lbPlaqueteiro"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:text="Plaqueteiro:"
                    android:textSize="22dp"
                    android:textColor="#000000" />
                <EditText
                    android:id="@+id/campoPlaqueteiro"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="999dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/lbLateralX"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:text="Lateral X:"
                    android:textSize="22dp"
                    android:textColor="#000000" />
                <EditText
                    android:id="@+id/campoLateralX"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/lbLateralY"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:text="Lateral Y:"
                    android:textSize="22dp"
                    android:textColor="#000000" />
                <EditText
                    android:id="@+id/campoLateralY"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/lbAnotadorGPS"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:text="Anotador GPS:"
                    android:textSize="22dp"
                    android:textColor="#000000" />
                <EditText
                    android:id="@+id/campoAnotadorGPS"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="999dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">








            </LinearLayout>


            <LinearLayout
                android:layout_width="1024dp"
                android:layout_height="2dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal">

            </LinearLayout>







        <LinearLayout
            android:layout_width="1024dp"
            android:layout_height="80dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="11dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSalvarProjeto"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Salvar alterações"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@layout/template_botao_padrao"
                android:textSize="18dp" />


            <Button
                android:id="@+id/btnCancelarAlteracoesProjeto"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="550dp"
                android:text="Cancelar / Retonar à tela principal"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@layout/template_botao_padrao"
                android:textSize="18dp" />


        </LinearLayout>



    </LinearLayout>



        <LinearLayout
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:background="?attr/colorAccent">
        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"

        android:orientation="horizontal"
        android:background="?attr/colorAccent">
    </LinearLayout>

</LinearLayout>
